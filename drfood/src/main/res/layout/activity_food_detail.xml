<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ocasoft.drfood.FoodDetailActivity"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Spaghetti Bolognese"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textIsSelectable="false"
        android:paddingTop="@dimen/small_vertical_padding_text_fooddet"
        android:paddingBottom="@dimen/small_vertical_padding_text_fooddet"
        android:background="@color/header_background"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/spaghettihd"
        android:layout_alignParentStart="false"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/big_vertical_padding_text_fooddet"
        android:layout_marginBottom="@dimen/big_vertical_padding_text_fooddet" />

    <!-- Quantity selection -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/lateral_padding_fooddet"
        android:paddingLeft="@dimen/lateral_padding_fooddet"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Quantity"
            android:paddingBottom="@dimen/small_vertical_padding_text_fooddet"
            android:id="@+id/textView2"
            android:layout_below="@+id/imageView2FoodDetail"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/medium_vertical_padding_text_fooddet">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="0.5"
                android:text="1"
                android:id="@+id/button"/>

            <Button
                android:layout_width="0dip"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Cup"
                android:id="@+id/button2"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/lateral_padding_fooddet"
        android:layout_marginRight="@dimen/lateral_padding_fooddet"
        style="@style/Line"/>

    <!-- approximate calories -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingRight="@dimen/lateral_padding_fooddet"
        android:paddingLeft="@dimen/lateral_padding_fooddet"
        android:paddingTop="@dimen/medium_vertical_padding_text_fooddet"
        android:paddingBottom="@dimen/medium_vertical_padding_text_fooddet"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/textView3"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" approximate calories"
            android:id="@+id/textView4"
            android:gravity="right"
            android:textStyle="italic"/>
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/lateral_padding_fooddet"
        android:layout_marginRight="@dimen/lateral_padding_fooddet"
        style="@style/Line"/>

    <!-- Kind of food -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/lateral_padding_fooddet"
        android:paddingLeft="@dimen/lateral_padding_fooddet"
        android:paddingTop="@dimen/medium_vertical_padding_text_fooddet"
        android:paddingBottom="@dimen/medium_vertical_padding_text_fooddet">

        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Kind of food"
            android:id="@+id/textView5"/>

        <TextView
            android:layout_width="0dip"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff35cd35"
            android:text="Healthy"
            android:id="@+id/textView6"
            android:gravity="right"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/lateral_padding_fooddet"
        android:layout_marginRight="@dimen/lateral_padding_fooddet"
        style="@style/Line"/>

    <!-- Done button -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.ocasoft.drfood.uiobjects.CircleButton
            android:id="@+id/buttonDoneFoodDetail"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dip"
            android:src="@drawable/ic_action_tick"
            app:cb_color="#ff35cd35"
            android:layout_alignParentLeft="false"/>
    </RelativeLayout>

</LinearLayout>