<?xml version="1.0" encoding="utf-8"?>

<!-- Based on https://github.com/goodev/SquareGridView/blob/master/SquareGrid/res/layout/item.xml -->
<com.ocasoft.drfood.objects.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />
        <ImageView
            android:id="@+id/favourite_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/favourite_blue_item_inactive"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/favourite_item"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/time_recommended"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#88000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>


    <View
        android:id="@+id/press"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_press_bg"
        />
</com.ocasoft.drfood.objects.SquareLayout>