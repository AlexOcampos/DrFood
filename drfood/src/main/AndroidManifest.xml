<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ocasoft.drfood" >

    <uses-sdk android:minSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ocasoft.drfood.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ocasoft.drfood.TrackFoodActivity"
            android:label="@string/title_activity_track_food"
            android:parentActivityName="com.ocasoft.drfood.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ocasoft.drfood.HomeActivity" />
        </activity>
        <activity
            android:name="com.ocasoft.drfood.FoodSelectorActivity"
            android:label="@string/title_activity_food_selector"
            android:parentActivityName="com.ocasoft.drfood.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ocasoft.drfood.HomeActivity" />

        </activity>
        <activity
            android:name="com.ocasoft.drfood.FoodDetailActivity"
            android:label="@string/title_activity_track_food"
            android:parentActivityName="com.ocasoft.drfood.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ocasoft.drfood.HomeActivity" />
        </activity>
        <provider
            android:name=".contentprovider.FoodContentProvider"
            android:authorities="com.ocasoft.drfood.contentprovider" >
        </provider>
    </application>

</manifest>
