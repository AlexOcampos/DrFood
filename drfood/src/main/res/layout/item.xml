<?xml version="1.0" encoding="utf-8"?>

<!-- Based on https://github.com/goodev/SquareGridView/blob/master/SquareGrid/res/layout/item.xml -->
<com.ocasoft.drfood.objects.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#88000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical|left"
            android:gravity="left"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/favourite_blue"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:clickable="true"/>
    </LinearLayout>


    <View
        android:id="@+id/press"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_press_bg"
        />
</com.ocasoft.drfood.objects.SquareLayout>