<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#9c27b0"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/fd_background"
            android:minHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.5"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <com.pkmmte.view.CircularImageView
                android:id="@+id/circularFoodImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/home_header_padding"
                android:layout_marginBottom="@dimen/home_header_padding"
                android:src="@drawable/account_image"
                app:border="true"
                app:border_color="#EEEEEE"
                app:border_width="2dp"
                app:shadow="true"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/nameUserTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/home_header_padding"
                android:text="Alex Ocampos Veiga"
                android:textStyle="bold"
                android:textColor="@color/home_user_name"
                android:textSize="@dimen/home_header_size_name"
                android:layout_gravity="bottom|center_horizontal"/>
            <TextView
                android:id="@+id/emailUserTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/home_header_padding"
                android:text="alexocamposveiga@gmail.com"
                android:textStyle="italic"
                android:textColor="@color/home_user_email"
                android:textSize="@dimen/home_header_size_email"
                android:layout_gravity="bottom|center_horizontal"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>